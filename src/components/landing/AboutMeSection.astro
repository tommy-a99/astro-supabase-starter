---
import { Image } from "astro:assets";
import catsFace from "../../assets/images/cats_face.jpg";
import { useTranslations } from "../../utils/i18n/utils";

const t = useTranslations(Astro.url);
---

<section id="about-me" class="py-20 bg-neutral-50 dark:bg-neutral-800">
  <div class="container mx-auto px-6">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-800 dark:text-white">
        {t("aboutMe.title")}
      </h2>
    </div>
    <div
      class="max-w-4xl mx-auto bg-white dark:bg-gray-900 rounded-lg shadow-xl p-8 flex flex-col md:flex-row items-center gap-8"
    >
      <div class="w-40 h-40 md:w-48 md:h-48 flex-shrink-0">
        <Image
          src={catsFace}
          alt="Creator's Photo"
          class="rounded-full w-full h-full object-cover border-4 border-blue-200"
        />
      </div>
      <div class="text-center md:text-left">
        <h3 class="text-2xl font-bold text-gray-900 dark:text-white">
          {t("aboutMe.name")}
        </h3>
        <p class="mt-2 text-gray-600 dark:text-gray-300">
          {t("aboutMe.bio")}
        </p>
        <div class="mt-6 flex justify-center md:justify-start gap-6"></div>
      </div>
    </div>
  </div>
</section>
