---
import { useTranslations, getLangFromUrl } from "../../utils/i18n/utils";
import {getRelativeLocaleUrl} from "astro:i18n";

const t = useTranslations(Astro.url);
const lang = getLangFromUrl(Astro.url);
---
<section class="py-16 bg-white">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto px-4">
        <div class="bg-white rounded-lg overflow-hidden shadow-lg hover:scale-105 transition-transform duration-300">
            <img src="/images/diet.webp" alt="Healthy diet" class="w-full h-48 object-cover">
            <div class="p-6">
                <h3 class="text-2xl font-bold text-gray-800">{t("landing.corePillars.diet.title")}</h3>
                <p class="text-gray-600 mt-2">{t("landing.corePillars.diet.description")}</p>
            </div>
        </div>
        <div class="bg-white rounded-lg overflow-hidden shadow-lg hover:scale-105 transition-transform duration-300">
            <img src="/images/exercise.webp" alt="Exercise" class="w-full h-48 object-cover">
            <div class="p-6">
                <h3 class="text-2xl font-bold text-gray-800">{t("landing.corePillars.exercise.title")}</h3>
                <p class="text-gray-600 mt-2">{t("landing.corePillars.exercise.description")}</p>
            </div>
        </div>
        <div class="bg-white rounded-lg overflow-hidden shadow-lg hover:scale-105 transition-transform duration-300">
            <img src="/images/health.webp" alt="Health tracking" class="w-full h-48 object-cover">
            <div class="p-6">
                <h3 class="text-2xl font-bold text-gray-800">{t("landing.corePillars.health.title")}</h3>
                <p class="text-gray-600 mt-2">{t("landing.corePillars.health.description")}</p>
            </div>
        </div>
    </div>
</section>